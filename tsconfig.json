{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "declaration": true,
        "sourceMap": true,
        "outDir": ".",
        "rootDir": ".",
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "strictFunctionTypes": false,
        "strictBindCallApply": false,
        "strictPropertyInitialization": false,
        "noImplicitThis": false,
        "alwaysStrict": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": false,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@magnus-plugins/nest-graphql-fastify": [
                "packages/nest-graphql-fastify/lib/index.ts"
            ],
            "@magnus-plugins/apollo-server-fastify": [
                "packages/apollo-server-fastify/lib/index.ts"
            ],
            "@magnus-plugins/faker": [
                "packages/faker/lib/index.ts"
            ],
            "@magnus-plugins/mock": [
                "packages/mock/lib/index.ts"
            ],
            "@magnus-plugins/nest-resolver": [
                "packages/nest-resolver/lib/index.ts"
            ],
            "@magnus-plugins/nest-runner": [
                "packages/nest-runner/lib/index.ts"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "packages",
        "tools"
    ],
    "exclude": [
        "node_modules"
    ]
}